<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Marketplace{% endblock %}</title>

    {% block stylesheets %}
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">


    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <style>
        .navbar {
            background-color: #f8f9fa; /* Color de fondo pastel */
        }

        .navbar-nav .nav-link {
            color: #495057; /* Color del texto */
        }

        .navbar-nav .nav-link:hover {
            background-color: #e2e6ea; /* Color de fondo al pasar el rat√≥n */
        }

        .navbar-nav .nav-item p {
            margin: 0;
            padding: 0.5rem 1rem;
            color: #495057;
        }

        .navbar-brand {
            color: #6c757d;
        }

        .navbar-brand:hover {
            color: #495057;
        }

        .nav-item-user {
            display: flex;
            align-items: center;
        }

        .nav-item-user p {
            margin: 0;
            padding-right: 1rem;
        }

        .nav-item-user a {
            padding-left: 0;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active" >
                <a class="nav-link" href="{{ path('list_products') }}">Productos disponibles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('cart_details') }}">Ver carrito</a>
            </li>

        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item d-flex align-items-center">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <p class="nav-link mb-0">Hola {{ app.user.name }}</p>
                    <a class="nav-link" href="{{ path('app_logout') }}" aria-expanded="false">
                        Logout
                    </a>
                {% else %}
                    <a class="sidebar-link" href="{{ path('app_login') }}" aria-expanded="false">
                        Login
                    </a>
                {% endif %}
            </li>
        </ul>
    </div>
</nav>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container">

    {% block body %}
    {% endblock %}
</div>
</body>
</html>
